        <header/>
        <body>
            <!-- Registration form -->
            <trans-unit id="feuser.registration.form.email">
                <source>Email</source>
            </trans-unit>
            <trans-unit id="feuser.registration.form.email.placeholder">
                <source>john@doe.com</source>
            </trans-unit>
            <trans-unit id="feuser.registration.form.submit">
                <source>Register now</source>
            </trans-unit>
            <trans-unit id="feuser.registration.status.submitted.title">
                <source>Thank you for registering</source>
            </trans-unit>
            <trans-unit id="feuser.registration.status.submitted.message">
                <source>We have sent you an email. Please click on the confirmation link inside to finish your
                    registration.
                </source>
            </trans-unit>
            <trans-unit id="feuser.registration.status.success.title">
                <source>Registration confirmed</source>
            </trans-unit>
            <trans-unit id="feuser.registration.status.success.message">
                <source>Thank you for confirming your registration. You can now sign in to the website.</source>
            </trans-unit>
            <trans-unit id="feuser.registration.status.error.title">
                <source>Registration error</source>
            </trans-unit>
            <trans-unit id="feuser.registration.status.error.message">
                <source>Sorry, but there was an error. Please contact us directly if this keeps happening.
                </source>
            </trans-unit>
            <trans-unit id="feuser.registration.email.subject">
                <source>Please confirm your registration</source>
            </trans-unit>
            <trans-unit id="feuser.registration.email.body.html">
                <source><![CDATA[
                    <p>Thank your for registering. Please confirm your registration by clicking on the following link:</p>
                    <blockquote>
                        <a href="%s" target="_blank">%s</a>
                    </blockquote>
                    <p>After that you can sign in with the following credentials:</p>
                    <blockquote>
                        <strong>Username:</strong> %s<br />
                        <strong>Password:</strong> %s
                    </blockquote>
                     <p>If you do not wish to register anymore you can simply ignore this message.</p>
                ]]></source>
            </trans-unit>
            <trans-unit id="feuser.registration.email.body.plaintext">
                <source>
                    Please confirm your registration by clicking on the following link:

                    %s

                    After that you can sign in with the following credentials:

                    Username: %s
                    Password: %s

                    If you do not wish to register anymore you can simply ignore this message.
                </source>
            </trans-unit>

            <!-- Profile update form -->
            <trans-unit id="feuser.profile.form.submit">
                <source>Update</source>
            </trans-unit>
            <trans-unit id="feuser.profile.form.givenName">
                <source>Given name</source>
            </trans-unit>
            <trans-unit id="feuser.profile.form.givenName.placeholder">
                <source>John</source>
            </trans-unit>
            <trans-unit id="feuser.profile.form.familyName">
                <source>Family name</source>
            </trans-unit>
            <trans-unit id="feuser.profile.form.familyName.placeholder">
                <source>Doe</source>
            </trans-unit>
            <trans-unit id="feuser.profile.status.update.success.message">
                <source>Profile updated</source>
            </trans-unit>
            <trans-unit id="feuser.profile.status.update.success.message">
                <source>Your successfully updated your profile.</source>
            </trans-unit>
            <trans-unit id="feuser.profile.status.update.error.title">
                <source>Sorry, but there was an error updating your profile.</source>
            </trans-unit>

            <!-- Change password -->
            <trans-unit id="feuser.password.form.submit">
                <source>Change password</source>
            </trans-unit>
            <trans-unit id="feuser.password.form.password">
                <source>Password</source>
            </trans-unit>
            <trans-unit id="feuser.password.form.password.placeholder">
                <source>Your new password</source>
            </trans-unit>
            <trans-unit id="feuser.password.status.success">
                <source>You successfully changed your password.</source>
            </trans-unit>
            <trans-unit id="feuser.password.status.error">
                <source>Sorry, but there was an error changing your password.</source>
            </trans-unit>

            <!-- Validators -->
            <trans-unit id="validator.password.minLength.error">
                <source>Your password is too short. Please use at least %s characters.</source>
            </trans-unit>
        </body>
